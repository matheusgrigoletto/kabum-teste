html.page-login
  &, body
    height 100%

  body
    display -ms-flexbox
    display flex
    -ms-flex-align center
    align-items center
    padding-top 40px
    padding-bottom 40px
    background-color #f5f5f5

    .form-signin
      width 100%
      max-width 520px
      padding 15px
      margin auto
      animation login .5s

      .form-control
        position relative
        box-sizing border-box
        height auto
        padding 10px
        font-size 16px

        &:focus 
          z-index 2

      input[type="password"], button
        margin-top 10px

@keyframes login
  from
    opacity 0
    transform translateY(55px)

  to
    opacity
    transform translateY(0)
