// Input placeholder
placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

// Selections
selection()
	&::selection
		{block}
	&::-moz-selection
		{block}

// mouse-over, focus, active
hover()
	&:hover, &:focus, &:active
		{block}

// focus, active
focus()
	&:focus, &:active
		{block}

// font size rem
fontsize(value) {
	font-size: value;

	if (value is inherit) {
		// n√£o faz nada
	} else {
		u = unit(value);

		if (u is not 'rem') {
			font-size: remify(value)
		}
	}
}

/* PX para REM */
remify(value) {
	u = unit(value);

	if (u is 'px') {
		return unit(value/16, 'rem')
	} else {
		if (u is 'em') {
			return unit(value, 'rem')
		}
		return unit(value, u)
	}
}
